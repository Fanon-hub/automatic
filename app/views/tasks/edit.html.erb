<h1>Edit Task Page</h1>

<%= form_with model: @task, local: true do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Title Title", id: "title-label" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, "Content", id: "content-label" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit "Update Task", id: "update-task" %>
  </div>
<% end %>

<%= link_to "Back", tasks_path, id: "back" %>