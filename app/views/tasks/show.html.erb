<h1><%= t(:show_task_page) %></h1>

<div>
  <p><strong><%= Task.human_attribute_name(:title) %>:</strong> <%= @task.title %></p>
</div>

<div>
  <p><strong><%= Task.human_attribute_name(:content) %>:</strong> <%= @task.content %></p>
</div>

<div>
  <p><strong><%= Task.human_attribute_name(:created_at) %>:</strong> <%= l(@task.created_at, format: :short) %></p>
</div>

<%= link_to t('tasks.show.edit'), edit_task_path(@task), id: "edit-task" %>

<%= link_to t('tasks.show.back'), tasks_path, id: "back" %>