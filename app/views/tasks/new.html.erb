<h1>New Task Page</h1>

<%= form_with model: @task, local: true do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h3>Please fix the errors below:</h3>  
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Title" %><br>
    <%= form.text_field :title %>
    <% @task.errors[:title].each do |error| %>
      <span class="field-error"><%= "Title #{error}" %></span>
    <% end %>
  </div>

  <div>
    <%= form.label :content, "Content" %><br>
    <%= form.text_area :content %>
    <% @task.errors[:content].each do |error| %>
      <span class="field-error"><%= "Content #{error}" %></span>
    <% end %>
  </div>

  <div>
    <%= form.submit "Create Task" %>
  </div>
<% end %>

<%= link_to "Back", tasks_path %>
