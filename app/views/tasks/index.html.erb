<h1><%= link_to t(:new_task), new_task_path %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('tasks.index.headers.title') %></th>
      <th><%= t('tasks.index.headers.content') %></th>
      <th><%= t('tasks.index.headers.created_at') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= l(task.created_at, format: :short) %></td>
        <td><%= link_to t('tasks.index.show'), task %></td>
        <td><%= link_to t('tasks.index.edit'), edit_task_path(task), class: 'edit-task' %></td>
        <td>
        <td>
          <%= link_to t('tasks.index.destroy'), task_path(task),
                      method: :delete,
                      data: { confirm: t('tasks.index.confirm') },
                      class: 'destroy-task' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %> 