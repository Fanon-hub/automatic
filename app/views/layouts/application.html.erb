<!DOCTYPE html>
<html>
  <head>
    <title><%= t(:app_title, default: 'CdpWebManyoTask') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: 'all' %>
    <%= javascript_include_tag 'application', defer: true %>
  </head>
  <body>
    <nav id="global-nav">
      <%= link_to t(:tasks_index), tasks_path %> <!-- "タスクリスト" -->
      <%= link_to t(:new_task), new_task_path %> <!-- "タスク登録" -->
    </nav>
    
    <% if notice %>
      <div class="alert alert-info"><%= notice %></div> <!-- Translated flash -->
    <% end %>
    <% if alert %>
      <div class="alert alert-danger"><%= alert %></div>
    <% end %>
    
    <%= yield %>
  </body>
</html>